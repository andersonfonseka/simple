<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<simple-config>

	<simple-tiles definition="loginlayout"
		path="/pages/layout/loginlayout.jsp">
		<simple-tiles-fragment id="top"
			path="/pages/layout/header.jsp" />
		<simple-tiles-fragment id="bottom"
			path="/pages/layout/footer.jsp" />
	</simple-tiles>


	<simple-tiles definition="layout"
		path="/pages/layout/layout.jsp">
		<simple-tiles-fragment id="top"
			path="/pages/layout/header.jsp" />
		<simple-tiles-fragment id="menu"
			path="/pages/layout/menu.jsp" />
		<simple-tiles-fragment id="bottom"
			path="/pages/layout/footer.jsp" />
	</simple-tiles>

	<simple-tiles definition="login" extend="loginlayout">
		<simple-tiles-fragment id="body"
			path="/pages/login.jsp" />
	</simple-tiles>

	<simple-tiles definition="project" extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/project.jsp" />
	</simple-tiles>

	<simple-tiles definition="projectCreate" extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/projectCreate.jsp" />
	</simple-tiles>

	<simple-tiles definition="projectUpdate" extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/projectUpdate.jsp" />
	</simple-tiles>

	<simple-tiles definition="projectFeature" extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/projectFeature.jsp" />
	</simple-tiles>

	<simple-tiles definition="projectFunctionality"
		extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/projectFunctionality.jsp" />
	</simple-tiles>

	<simple-tiles definition="projectTestCases"
		extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/projectTestCases.jsp" />
	</simple-tiles>
	
		<simple-tiles definition="projectTestCaseDetails"
		extend="layout">
		<simple-tiles-fragment id="body"
			path="/pages/project/projectTestCaseDetails.jsp" />
	</simple-tiles>


	<simple-forward name="login" path="login" />

	<simple-forward name="project" path="project" />
	<simple-forward name="projectCreate"
		path="projectCreate" />
	<simple-forward name="projectUpdate"
		path="projectUpdate" />
	<simple-forward name="projectFeature"
		path="projectFeature" />
	<simple-forward name="projectFunctionality"
		path="projectFunctionality" />
	<simple-forward name="projectTestCases"
		path="projectTestCases" />
	<simple-forward name="projectTestCaseDetails"
		path="projectTestCaseDetails" />


</simple-config>
