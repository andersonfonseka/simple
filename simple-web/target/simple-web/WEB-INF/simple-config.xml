<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<simple-config>

	<simple-form name="projectForm" className="com.andersonfonseka.project.form.ProjectForm"/>
	<simple-form name="healthImagingForm" className="com.andersonfonseka.project.form.HealthImagingForm"/>
	
	<simple-controller name="projectController" 
					   className="com.andersonfonseka.project.controller.ProjectController"
					   formName="projectForm"
					   scope="request"/>

	<simple-tiles definition="layout.tiles" path="/pages/layout/layout.jsp">
		<simple-tiles-fragment id="header" path="../layout/header.jsp"/>
		<simple-tiles-fragment id="menu" path="../layout/header.jsp"/>
		<simple-tiles-fragment id="footer" path="../layout/header.jsp"/>
	</simple-tiles>
	
	<simple-tiles definition="project.tiles" extend="layout.tiles">
		<simple-tiles-fragment id="body" path="../project/project.jsp"/>
	</simple-tiles>

	<simple-tiles definition="projectForm.tiles" extend="layout.tiles">
		<simple-tiles-fragment id="body" path="../project/projectForm.jsp"/>
	</simple-tiles>
	
	<simple-forward name="project" path="project.tiles"/>
	<simple-forward name="projectPage" path="projectForm.tiles"/>

</simple-config>
